# =============================================================================
# CRYPTO CALLER - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file contains all environment variables used across all services

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=caller
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=caller_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# TON BLOCKCHAIN CONFIGURATION
# =============================================================================
TON_API_KEY=your_toncenter_api_key_here
TON_NETWORK=mainnet
TON_WALLET=UQyour_central_wallet_address_here
CENTRAL_WALLET_MNEMONIC=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12 word13 word14 word15 word16 word17 word18 word19 word20 word21 word22 word23 word24

# Jetton Configuration
JETTON_MASTER_ADDRESS=EQyour_jetton_master_address_here

# Subscription Contract
SUBSCRIPTION_CONTRACT_ADDRESS=EQyour_subscription_contract_address_here
SUBSCRIPTION_PRICE=0.75

# =============================================================================
# RELAYER SERVICE CONFIGURATION
# =============================================================================
# Relayer wallet (separate from central wallet)
RELAYER_PRIV_KEY=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12 word13 word14 word15 word16 word17 word18 word19 word20 word21 word22 word23 word24
RELAYER_WALLET_ADDR=EQyour_relayer_wallet_address_here

# Contract addresses (should match the values above)
# SUBSCRIPTION_CONTRACT_ADDR = SUBSCRIPTION_CONTRACT_ADDRESS (same contract)
# JETTON_MASTER_ADDR = JETTON_MASTER_ADDRESS (same jetton)
SUBSCRIPTION_CONTRACT_ADDR=EQyour_subscription_contract_address_here
JETTON_MASTER_ADDR=EQyour_jetton_master_address_here

# Service URLs
BACKEND_URL=http://backend:3000
RELAYER_URL=http://relayer:3001

# Processing Configuration
POLL_INTERVAL_MS=5000
MAX_RETRIES=3
GAS_FOR_CALLBACK=10000000
PROCESS_DB=./relayer_state.json

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
ADMIN_ID=123456789
STATS_IDS=["123456789"]

# Web App URLs
WEB_APP_URL=https://caller.ruble.website
BACKGAMMON_WEB_APP_URL=https://t.me/ruble_caller_bot/backgammon
TRADER_WEB_APP_URL=https://t.me/ruble_caller_bot/trader
TICKET_ROUTE=https://caller.ruble.website/api/tickets

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# OKX API Configuration
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_API_PASSPHRASE=your_okx_api_passphrase_here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SSL CERTIFICATES (Optional - for production HTTPS)
